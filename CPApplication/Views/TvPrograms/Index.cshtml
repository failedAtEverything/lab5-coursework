@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

<h1>Programs</h1>
<p>
    <a asp-action="Create">NEW</a>
</p>
Pages: @Html.PagedListPager(
        (IPagedList)Model, 
        (page) => Url.Action("Index", "TvPrograms", new { page = page }
))
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Length
            </th>
            <th>
                Rating
            </th>
            <th>
                Genre
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Length
                </td>
                <td>
                    @item.Rating
                </td>
                <td>
                    @item.GenreName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
